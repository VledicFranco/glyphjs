{
  "name": "@glyphjs/schemas",
  "version": "0.7.1",
  "description": "Zod schemas for Glyph JS components with JSON Schema generation",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "lint": "eslint src/",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@glyphjs/types": "workspace:*",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.3"
  },
  "sideEffects": false,
  "license": "MIT",
  "author": "Vledic Franco",
  "repository": {
    "type": "git",
    "url": "https://github.com/VledicFranco/glyphjs.git",
    "directory": "packages/schemas"
  },
  "homepage": "https://github.com/VledicFranco/glyphjs#readme",
  "bugs": "https://github.com/VledicFranco/glyphjs/issues",
  "keywords": [
    "glyph",
    "glyphjs",
    "markdown",
    "react",
    "ui-components",
    "interactive-documents",
    "zod",
    "schemas",
    "validation",
    "json-schema"
  ],
  "devDependencies": {
    "ajv": "^8.17.1"
  }
}
