{
  "name": "@glyphjs/runtime",
  "version": "0.6.0",
  "description": "React-based rendering runtime for Glyph JS IR",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "lint": "eslint src/",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@glyphjs/schemas": "workspace:*",
    "@glyphjs/types": "workspace:*",
    "dompurify": "^3.3.1"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "sideEffects": false,
  "license": "MIT",
  "author": "Vledic Franco",
  "repository": {
    "type": "git",
    "url": "https://github.com/VledicFranco/glyphjs.git",
    "directory": "packages/runtime"
  },
  "homepage": "https://github.com/VledicFranco/glyphjs#readme",
  "bugs": "https://github.com/VledicFranco/glyphjs/issues",
  "keywords": [
    "glyph",
    "glyphjs",
    "markdown",
    "react",
    "ui-components",
    "interactive-documents",
    "runtime",
    "rendering",
    "theming"
  ],
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/dompurify": "^3.2.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "jsdom": "^27.4.0"
  }
}
